@model IEnumerable<DutchServisMCV.Models.TournamentInfo>

@{
    ViewBag.Title = "Turnieje";
}

<header class="text-center">
    <h1>Turnieje Dutch</h1>
</header>

<script type="text/jscript">
    var path = @Url.Content("~/Content/");
</script>

<div class="row block">
    <div class="col-xs-12">
        @if (Session["Username"] != null)
        {
            <aside class="mx-left">
                <a href="@Url.Action("Create", "Tournaments")">
                    <div class="admincontroll">Utwórz nowy turniej</div>
                </a>
            </aside>
        }
    </div>
</div>

@foreach (DutchServisMCV.Models.TournamentInfo item in Model)
{
    <article class="row border-block">
        <div class="col-xs-12 col-sm-7 col-md-8">
            <ul class="list-unstyled list-stat">
                <li>
                    <h4>
                        @Html.ActionLink(item.Name, "Info", "Tournaments", new { name = item.Name }, new { @class = "unstyled bluehover" })
                    </h4>
                </li>
                <li><b>Data:</b> @(((DateTime)item.DateTime).ToShortDateString())</li>
                <li><b>Miejsce:</b> @item.Location</li>
                @if (@item.Theme != null)
                {
                    <li class="cell-md"><b>Motyw:</b> @item.Theme</li>
                }
                @if (@item.Info != null)
                {
                    <li class="cell-md"><b>Informacje:</b> @item.Info</li>
                }
            </ul>
        </div>
        <div class="col-sm-5 col-md-4 cell-sm col-height">
            <img class="img-responsive img-rounded border-1" id="@item.Name" />

            <script type="text/jscript">
                setPath('@item.Name', 'tournamentdata/', '@item.Img', 'empty.png');
            </script>
        </div>
    </article>
}