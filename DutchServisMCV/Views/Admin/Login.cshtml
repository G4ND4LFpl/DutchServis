@model DutchServisMCV.Models.Users

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container">
    <h2>Logowanie</h2>
    <p class="text-danger">Uwaga! Ta strona jest dla ADMINÓW. Jeśli nie jesteś adminem nie poptrzebujesz się logować.</p>
    <hr />
    @Html.ValidationSummary(true, "")

    <div class="form-group">
        @Html.LabelFor(model => model.Username, "Nazwa admina", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">  
            @Html.EditorFor(model => model.Username)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Pass, "Hasło", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Pass)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Zaloguj" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <label>@ViewBag.Notification</label>
        </div>
    </div>
</div>
}

