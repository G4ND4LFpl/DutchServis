@model DutchServisMCV.Models.Users

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container">
        <h2>Logowanie</h2>
        <p class="text-danger">Uwaga! Ta strona jest dla ADMINÓW. Jeśli nie jesteś adminem nie poptrzebujesz się logować.</p>
        <hr />
        @Html.ValidationSummary(true, "")

        <div class="form-group">
            <label class="control-label col-md-3" for="Username">Nazwa admina</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3" for="Pass">Hasło</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Zaloguj" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <label>@ViewBag.Notification</label>
            </div>
        </div>
    </div>
}

