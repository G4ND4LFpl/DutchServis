<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Dutch Federation</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header blue-theme">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dutch Federation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Strona główna", "Index", "Home")</li>
                    <li>@Html.ActionLink("Lista Graczy", "Players", "Home")</li>
                    <li>@Html.ActionLink("Turnieje", "Turnaments", "Home")</li>
                    <li>@Html.ActionLink("Ligi", "Leagues", "Home")</li>
                    <li>@Html.ActionLink("Zasady gry", "Rules", "Home")</li>
                    <li>@Html.ActionLink("Gra treningowa", "Botgame", "Home")</li>
                    <!--<li>
                        <div class="dropdown">
                            <a class="dropdown-header" href="">Rozgrywki</a>
                            <ul class="dropdown-content nav navbar-nav">
                                <li>@Html.ActionLink("Turnieje", "Turnaments", "Home")</li>
                                <li>@Html.ActionLink("Ligi", "Leagues", "Home")</li>
                            </ul>
                        </div>
                    </li>-->
                </ul>
                <div class="navbar-item f-right">
                    @if (Session["Username"] != null)
                    {
                        <aside class="f-left">@Html.ActionLink(Session["Username"].ToString(), "admin", "Home")</aside>
                        <aside class="f-left">@Html.ActionLink("Wyloguj", "Logout", "Home")</aside>
                    }
                    else
                    {
                        <aside>@Html.ActionLink("Zaloguj", "Login", "Home")</aside>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="blue-line"></div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Piotr Majewski @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
