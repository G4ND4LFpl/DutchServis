@model DutchServisMCV.Models.Clans

@{
    ViewBag.Title = "Edytuj " + Model.Name;
}

<h2>Edytuj @Model.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="ClanId">Id</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ClanId, new { @readonly = "readonly", @class = "form-control text-box single-line" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Nazwa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                <div class="text-danger">@ViewBag.NameValidationMsg</div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zatwierdź zmianę" class="btn-warning" />
                <a href="@Url.Action("Index")">
                    <div class="disp-inline-block buttonlike-heavy">
                        Odrzuć zmiany
                    </div>
                </a>
            </div>
        </div>
    </div>
}

