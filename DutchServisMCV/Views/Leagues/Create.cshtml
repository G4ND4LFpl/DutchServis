@model DutchServisMCV.Models.LeagueInfo
@{
    ViewBag.Title = "Utwórz nową ligę";
}

<header>
    <h2>Utwórz ligę</h2>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal wide">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">Nazwa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                <div class="text-danger">@ViewBag.NameValidationMsg</div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="StartDate">Data rozpoczęcia</label>
            <div class="col-md-10">
                @{
                    string date1 = (Model != null && Model.StartDate.HasValue) ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "";
                }
                <input type="date" class="list-box form-control" id="StartDate" name="StartDate" value="@date1" autocomplete="off">
                <div class="text-danger">@ViewBag.StartDateValidationMsg</div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="EndDate">Data zakończenia</label>
            <div class="col-md-10">
                @{
                    string date2 = (Model != null && Model.EndDate.HasValue) ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "";
                }
                <input type="date" class="list-box form-control" id="EndDate" name="EndDate" value="@date2" autocomplete="off">
                <div class="text-danger">@ViewBag.EndDateValidationMsg</div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Info">Informacje</label>
            <div class="col-md-10">
                <div class="textbox">
                    <textarea class="list-box form-control" id="Info" name="Info" autocomplete="off"></textarea>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz ligę" class="btn-warning" />
                <a href="@Url.Action("Index", "Leagues")">
                    <div class="disp-inline-block buttonlike">
                        Wróć
                    </div>
                </a>
            </div>
        </div>
    </div>
}

