@model IEnumerable<DutchServisMCV.Models.LeaugeInfo>

@{
    ViewBag.Title = "Ligi";
}

<header class="text-center">
    <h1>Ligi Dutch</h1>
</header>   

<script type="text/jscript">
    var path = @Url.Content("~/Content/");
</script>

<div class="row block">
    <div class="col-xs-12">
        @if (Session["Username"] != null)
        {
            <aside class="admincontroll mx-left">
                @Html.ActionLink("Utwórz nową Ligę", "Create")
            </aside>
        }
    </div>
</div>

@foreach (DutchServisMCV.Models.LeaugeInfo item in Model)
{
    <article class="row border-block">
        <div class="col-xs-12 col-sm-7 col-md-8">
            <ul class="list-unstyled list-stat">
                <li>
                    <h4><a class="unstyled bluehover" href="@Url.Action("LeagueInfo", "Matches", new { name = item.Name})">@item.Name</a></h4>
                </li>
                <li>Rozpoczęcie: @item.StartDate.ToShortDateString()</li>
                <li>Koniec: @item.EndDate.ToShortDateString()</li>
                <li class="cell-md">Informacje: @item.Info</li>
            </ul>
        </div>
        <div class="col-sm-5 col-md-4 cell-sm col-height">
            <img class="img-responsive img-rounded border-1" id="@item.Name" />

            <script type="text/jscript">
                setPath('@item.Name', 'tournamentdata/', '@item.Img', 'empty.png');
            </script>
        </div>
    </article>
}

