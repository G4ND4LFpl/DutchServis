@model IEnumerable<DutchServisMCV.Models.Players>

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Pozycja
        </th>
        <th>
            Gracz
        </th>
        <th>
            Ranking
        </th>
        <th>
            Elo.
        </th>
    </tr>

    @for (var i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>
                @i .
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ElementAt(i).Rating)
            </td>
        </tr>
    }

</table>
