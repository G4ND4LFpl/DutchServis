@model IEnumerable<DutchServisMCV.Models.PlayerInfo>

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h3>Arrows</h3>
<p style="font-size:16px;"> sort asc: &#11181;</p>
<p style="font-size:16px;"> sort desc: &#11183;</p>
<p style="font-size:16px;"> not sort: &#10606;</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-style">
            <th class="cell-1">Pozycja</th>
            <th class="cell-1">Awatar</th>
            <th class="cell-2">Gracz &#11183;</th>
            <th class="cell-2">Klan</th>
            <th class="cell-1">Ranking</th>
            <th class="cell-1">Rating</th>
        </tr>
    </thead>

    <tbody>
        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr class="table-style">
                <td class="cell-1">
                    <div class="cell-text">@(i + 1) .</div>
                </td>
                <td class="cell-1">
                    <img class="img-responsive" src="@Url.Content("~/Content/images/avatar.png")" />
                </td>
                <td class="cell-2">
                    <div class="cell-text">@Html.DisplayFor(modelItem => Model.ElementAt(i).Nickname)</div>
                </td>
                <td class="cell-2">
                    <div class="cell-text">@Html.DisplayFor(modelItem => Model.ElementAt(i).ClanId)</div>
                </td>
                <td class="cell-1">
                    <div class="cell-text">@Html.DisplayFor(modelItem => Model.ElementAt(i).Rating)</div>
                </td>
                <td class="cell-1">
                    <div class="cell-text">@Html.DisplayFor(modelItem => Model.ElementAt(i).Rating)</div>
                </td>
            </tr>
        }
    </tbody>
</table>
