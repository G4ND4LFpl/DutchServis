@model IEnumerable<DutchServisMCV.Models.PlayerInfo>

@{
    ViewBag.Title = "PlayerList";
}

<h2 class="mt-1 mb-1">Lista graczy</h2>

<div class="row mb-1">
    <div class="col-xs-5 col-sm-6 col-md-8">
        @if (Session["Username"] != null)
        {
        <div class="admincontroll">
            @Html.ActionLink("Dodaj nowego gracza", "Add")
        </div>
        }
    </div>
    <div class="col-xs-7 col-sm-6 col-md-4">
        <div class="row">
            <div class="col-xs-12">
                <button class="w-full" onclick="openFilterMenu()">Filtry</button>
            </div>
        </div>
        <div class="graybox" id="filter_menu">
            <div class="row">
                <div class="col-xs-12">
                    <label>Nick gracza</label>
                    <input class="mx-1 text-box single-line" id="filter_filed" type="text" onchange="refresh()" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <label>Pokaż nieaktywnych</label>
                    <input id="active_checkbox" type="checkbox" name="OnlyActive" onchange="refresh()" />
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr class="table-style">
            <th class="cell-1 cell-sm">Pozycja</th>
            <th class="cell-1 cell-only-xs">Poz.</th>
            <th class="cell-1 cell-md">Awatar</th>
            <th class="cell-2">
                <input class="sortbtn" type="button" id="player_sort" value="Gracz" onclick="sortPlayer()" />
            </th>
            <th class="cell-2 cell-lg">Klan</th>
            <th class="cell-1 cell-sm">
                <input class="sortbtn" type="button" id="rank_sort1" value="Ranking" onclick="sortRanking()" />
            </th>
            <th class="cell-1 cell-only-xs">
                <input class="sortbtn" type="button" id="rank_sort2" value="Rank." onclick="sortRanking()" />
            </th>
            <th class="cell-1 cell-sm">
                <input class="sortbtn" type="button" id="elo_sort1" value="Rating" onclick="sortRating()" />
            </th>
            <th class="cell-1 cell-only-xs">
                <input class="sortbtn" type="button" id="elo_sort2" value="Elo" onclick="sortRating()" />
            </th>
        </tr>
    </thead>

    <tbody id="table_body">
    </tbody>
</table>

<script type="text/jscript">
    var model = @Html.Raw(Json.Encode(Model));
    var path = @Url.Content("~/Content/");

    sortRanking();
</script>